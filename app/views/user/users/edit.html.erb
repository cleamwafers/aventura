<div class="row">
  <div class="col-xs-12">

    <h2 class="head-line title_h2 text-center">会員情報編集</h2>

    <%= form_with(model: @user, url: user_user_path(@user), local: true ,method: :put) do |f| %>

      <div class="col-xs-10">
        <div class="form-group col-xs-12">
          <%= f.label :"ユーザー名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, class: "last_name col-sm-3 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-8 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"sns", class: "col-sm-3 control-label" %>
          <%= f.text_field :sns, class: "col-sm-8 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"自己紹介", class: "col-sm-3 control-label" %>
          <%= f.text_field :introduction, class: "col-sm-8 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"画像", class: "col-sm-3 control-label" %>
          <%= f.file_field :image, placeholder: "画像", accept: "image/*" %><br>
        </div>
      </div>

      <div class="actions col-xs-9 col-xs-offset-3">
        <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
        <%= link_to edit_user_user_path do %>
        <button class="btn btn-danger" >
         退会する
        </button>
       <% end %>
      </div>
    <% end %>
  </div>
</div>