<h1>聖地一覧</h1>
 <div class="container-fluid">
  <%= search_form_for @q, url: search_sanctuarys_path do |f| %>
  <%= f.search_field :name_cont,:genre_name_cont %>
  <br>
  <%= f.submit '検索' %>
  <% end %>
    <i class="fas fa-search"></i>
 </div>
<% @sanctuarys.each do |sanctuary| %>
  <p><%= link_to "#{sanctuary.post_comments.count} コメント", sanctuary_path(post_image.id) %></p>
<% end %>
